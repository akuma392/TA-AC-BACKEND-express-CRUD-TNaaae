<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style1.css" />
    <title>Users</title>
  </head>
  <body class="user">
    <header>
      <h2>List of Users</h2>
    </header>
    <main>
      <a href="/users/new"> add new User </a>
      <ul>
        <% users.forEach((user)=>{ %>
        <li>
          <h4><%= user.name%></h4>
          <p><%= user.email%></p>
          <p><%= user.age%> yrs</p>
          <p><%= user.address%></p>
          <p><%= user.bio%></p>
          <p><%= user.hobbies%></p>

          <a href="/users/<%= user._id%>"> See More </a>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
